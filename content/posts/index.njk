---
layout: layouts/default.njk
---

<section id="blog">
    <h1>Blog</h1>
    <ul class="post-collection">
    {%- for post in collections.post -%}
      <li>
        <h3 style="text-decoration:underline;margin:0;">{{ post.data.title }}</h3>
        <small>{{ post.data.date }}</small>
        <p>
            {{ post.data.excerpt }}
        </p>
        <p><a href={{ post.url }}>Read More > </a></p>
      </li>
    {%- endfor -%}
    </ul>
</section>